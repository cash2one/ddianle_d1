// 计算给定长度数据的16位CRC。
INLINE unsigned short GetCRC16(const unsigned char* pData, unsigned short nLength, unsigned short fcs)
{
	//unsigned short fcs = 0xffff;    // 初始化

	while(nLength>0)
	{
		fcs = (fcs >> 8) ^ crctab16[(fcs ^ *pData) & 0xff];
		nLength--;
		pData++;
	}

	return fcs;		//不取反
//	return ~fcs;    // 取反
}

